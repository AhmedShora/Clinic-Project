@using Microsoft.AspNet.Identity
@using Clinic_Website.Models;

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoff" }))
    {
        var db = new ApplicationDbContext();
        var UserId = User.Identity.GetUserId();
        var CurrentUser = db.Users.Where(a => a.Id == UserId).SingleOrDefault();
        @Html.AntiForgeryToken()<!--prevent from attack-->
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span>
                    <strong>Hello, @CurrentUser.UserName</strong>
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <div class="navbar-user">
                            <div class="row">
                                <div class="col-lg-4">
                                    <p class="text-center">
                                        <span class="glyphicon glyphicon-user img-size"></span>
                                    </p>
                                </div>
                                <div class="col-lg-8">
                                    <p class="text-right">
                                        <strong>@CurrentUser.UserName</strong>
                                    </p>
                                    @if (CurrentUser.UserType == "Doctor")
                                    {
                                        <a href="~/Home/GetClinicsByPublisher" class="btn btn-success btn-block">The Clinics you have </a>
                                        <a href="~/Clinics/Create" class="btn btn-success btn-block">Add new Clinic</a>

                                    }
                                    else
                                    {
                                        <a href="~/Home/GetClinicsByUser" class="btn btn-success btn-block">The Clinics you have applied</a>

                                    }
                                    <a href="~/Account/EditProfile" class="btn btn-primary  btn-block">Edit Account</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        <a href="javascript:document.getElementById('logoff').submit()" class="btn btn-danger btn-block">Sign Out</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
            
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="~/Account/Login">
                <i class="glyphicon glyphicon-user"></i>
                Login
            </a>
        </li>
        <li>
            <a href="~/Account/Register">
                <i class="glyphicon glyphicon-lock"></i>
                Register
            </a>
        </li>
    </ul>
}
