<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet"  type="text/css" />
</head>
<body>
    <div>
        <!--NavBar-->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbardiv">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="~/Home" class="navbar-brand">
                        <img id="clinicLogo" src="~/Content/unnamed.jpg" />
                    </a>
                </div>

                <div id="navbardiv" class="navbar-collapse collapse">
                    <ul id="navbar" class="nav navbar-nav">
                        <li>
                            <a href="~/Home">
                                <i class="glyphicon glyphicon-home"></i>
                                Main Page
                            </a>
                        </li>
                        <li>
                            <a href="~/Home/about">
                                <i class="glyphicon glyphicon-info-sign"></i>
                                About WebSite
                            </a>
                        </li>
                        <li>
                            <a href="~/Home/contact">
                                <i class="glyphicon glyphicon-envelope"></i>
                                Contact Us
                            </a>
                        </li>
                        <li>
                            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                            {
                                <input type="text" name="searchName" id="searchName" placeholder="Search Here.." />

                            }
                        </li>
                    </ul>
                    <!--Partial Login-->
                    @Html.Partial("_Login")
                </div>

            </div>
        </nav>

        <!--body-->
        <div class="container">
            <div class="row" id="bodyDiv">
                @RenderBody()
            </div>
        </div>

        <!--Footer-->
        <footer class="myfooter">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h3><i class="glyphicon glyphicon-question-sign"></i>Who are US?</h3>
                        <p>Clinic Mangment</p>
                    </div>
                    <div class="col-md-4">
                        <h3><i class="glyphicon glyphicon-globe"></i> Important Links</h3>
                        <ul>
                            <li><a href="#">link</a></li>
                            <li><a href="#">link</a></li>
                            <li><a href="#">link</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h3><i class="glyphicon glyphicon-envelope"></i> Contact US</h3>
                        <ul>
                            <li><a href="#">Leave a Message</a></li>
                            <li><a href="#">FaceBook Page</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="subfooter">
                <span>All copyright reseved 2020 </span>
                <!--start with v8-->
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scriptsHere", required: false)
    @RenderSection("scripts", required: false)

</body>
</html>
