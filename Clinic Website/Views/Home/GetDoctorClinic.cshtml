            @Html.DisplayFor(modelItem => item.ClinicDescription)
        </td>
        <td>
            <img style="width:64px" src="~/Uploads/@item.ClinicImage" />

            @*@Html.DisplayFor(modelItem => item.ClinicImage)*@
        </td>
        
